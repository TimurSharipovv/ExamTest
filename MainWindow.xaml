<Window x:Class="ExamTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExamTest"
        mc:Ignorable="d"
        Title="Карточки товаров" Height="500" Width="1000">
    <Grid>
        <!-- 2 строки(Заголовок и карточки) -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <!-- Кнопка назад -->
            <Button Grid.Column="0"
                    Content="Назад"
                    Height="30"
                    Width="70"
                    Margin="10"
                    Click="ButtonBackClick"/>

            <!-- Панель для заголовка -->
            <StackPanel Grid.Column="1">
                <!-- Заголовок -->
                <TextBlock Text="Карточки товаров"
                           FontSize="24"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,20"/>     
            </StackPanel>
            <!-- Лого с фио -->
            <StackPanel Grid.Column="2">
                <!-- ФИО -->
                <TextBlock x:Name="UserInfo"
                           HorizontalAlignment="Center"
                           FontWeight="Bold"
                           Margin="5"/>
                <Button Content="Выход"
                        Height="20"
                        Width="70"
                        Margin="10"
                        Click="ButtonExitClick"/>
            </StackPanel>
        </Grid>
        <!-- Карточки -->
        <ScrollViewer Grid.Row="1" Margin="10">
            <StackPanel>
                <Border x:Name="ProductBorder"
                        BorderThickness="2"
                        BorderBrush="Black"
                        Margin="0,0,0,10"
                        Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" 
                                BorderThickness="1"
                                BorderBrush="Black"
                                Height="150"
                                Width="200"
                                Padding="10">
                            <TextBlock Text="Фото"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="18"
                                       />
                        </Border>
                        <!-- Описание -->
                        <StackPanel Grid.Column="1" Margin="10">
                            <TextBlock Text="Категория и Название" 
                                       FontWeight="Bold"
                                       x:Name="CategoryAndName"/>
                            <TextBlock Text="Описание"
                                       x:Name="Description"/>
                            <TextBlock Text="Производитель"
                                       x:Name="Manufacturer"/>
                            <TextBlock Text="Поставщик"
                                       x:Name="Supplier"/>
                            <TextBlock Text="Цена"
                                       x:Name="Price"/>
                            <TextBlock Text="Единица измерения"
                                       x:Name="Unit"/>
                            <TextBlock Text="Количество"
                                       x:Name="Quantity"/>
                        </StackPanel>
                        <!-- Скидка -->
                        <Border Grid.Column="2" 
                                Margin="10"
                                BorderThickness="1"
                                BorderBrush="Black"
                                Height="50"
                                Width="100">
                            <TextBlock x:Name="DiscountSize"
                                       FontSize="18"
                                       Text=""
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
