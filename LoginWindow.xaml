<Window x:Class="ExamTest.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExamTest"
        mc:Ignorable="d"
        Title="Авторизация" Height="400" Width="550">
    <Grid Margin="10">
        <!-- Сделал 3 строки(Заголовок, форма и кнопки) -->
            <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Заголовок -->
        <TextBlock Grid.Row="0"
                   Text="Авторизация"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,20"/>
        <!-- Панель авторизации(названия и боксы) -->
        <StackPanel Grid.Row="1">
            <!-- Логин -->
            <TextBlock Text="Логин"
                       FontSize="18"
                       HorizontalAlignment="Center"
                       FontWeight="Bold"
                       Margin="10"/>
            <TextBox x:Name="LoginBox"
                     Height="30"
                     Width="200"
                     Margin="0,0,0,10"/>
            <!-- Пароль епта -->
            <TextBlock Text="Пароль"
                       FontSize="18"
                       HorizontalAlignment="Center"
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>
            <TextBox x:Name="PasswordBox"
                     Height="30"
                     Width="200"
                     Margin="0,0,0,10"/>    
        </StackPanel>
        <!-- Здесь я намучу кнопочки -->
        <StackPanel Grid.Row="2" Margin="20">
            <!-- Вход с проверкой -->
            <Button Content="Вход"
                    Height="30"
                    Width="200"
                    Margin="0,0,0,10"
                    Click="ButtonLoginClick"/>
            <!-- Вход как гость -->
            <Button Content="Войти как гость"
                    Height="30"
                    Width="200"
                    Margin="0,0,0,10"
                    Click="ButtonGuestClick"/>
        </StackPanel>
    </Grid>
</Window>
